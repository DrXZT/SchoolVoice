<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:id="@+id/not_card_view"
    app:cardCornerRadius="7dp"
    app:cardElevation="3dp"
    android:elevation="12dp"
    android:layout_margin="1dp"
    app:cardBackgroundColor="#00000000">

    <RelativeLayout
        android:id="@+id/not_post"
        android:layout_width="match_parent"
        android:layout_height="323dp"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/fjhgftz_textView"
            android:layout_width="match_parent"
            android:layout_height="323dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/fjhgftz_thewritebg"
            android:paddingLeft="50dp"
            android:paddingRight="70dp"
            android:paddingTop="70dp"
            android:textColor="#5B5B5B"
            android:textSize="20sp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/not_touxiang"
            android:layout_width="70dp"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="13dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fjhgftz_txcolor"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/not_name"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_alignBottom="@+id/not_touxiang"
            android:layout_alignParentStart="true"
            android:layout_marginStart="102dp"
            android:text="@string/n2"
            android:textColor="#5b5b5b"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/not_neirong"
            android:layout_width="295dp"
            android:layout_height="41dp"
            android:layout_alignStart="@+id/not_touxiang"
            android:layout_below="@+id/not_touxiang"
            android:paddingLeft="30dp"
            android:text="xxxxxxxxxx"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/not_img"
            android:layout_width="270dp"
            android:layout_height="158dp"
            android:layout_below="@+id/not_neirong"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/dlhjm_picture2" />

        <TextView
            android:id="@+id/not_time"
            android:layout_width="170dp"
            android:layout_height="27dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="25dp"
            android:text="2017/06/01"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dlhjm_aixin1"
            app:layout_constraintHorizontal_bias="0.151"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.428" />

        <TextView
            android:id="@+id/not_read"
            android:layout_width="65dp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/not_time"
            android:layout_marginEnd="45dp"
            android:text="阅读：" />

        <TextView
            android:id="@+id/not_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />


    </RelativeLayout>


</android.support.v7.widget.CardView >
