<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/aks_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/zwpl_thewirtebg2">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ask_tx3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="28dp"
            android:src="@drawable/zwpl_txcolor"
            app:riv_oval="true"/>

        <TextView
            android:id="@+id/ask_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/per_tupian"
            android:layout_alignTop="@+id/per_tupian"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ask_textView1"
            android:layout_width="330dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingEnd="70dp"
            android:paddingStart="70dp"
            android:paddingTop="40dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ask_textView4"
            android:layout_width="78dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/ask_tx3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="98dp"
            android:text="@string/neirong1"
            android:textColor="#5b5b5b"
            android:textSize="25sp" />

        <Button
            android:id="@+id/ask_liuyan2"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_alignBottom="@+id/ask_textView1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:background="@drawable/liuyan" />

        <TextView
            android:id="@+id/ask_txt"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ask_tx3"
            android:layout_marginStart="61dp"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ask_time"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ask_tx3"
            android:layout_below="@+id/ask_txt"
            android:text="TextView" />
    </RelativeLayout>

</RelativeLayout>

